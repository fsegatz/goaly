{
  "name": "goaly",
  "version": "1.0.0",
  "description": "A simple goal management app.",
  "main": "src/app.js",
  "scripts": {
    "test": "jest",
    "docs": "jsdoc -c jsdoc.config.json"
  },
  "keywords": [],
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/preset-env": "^7.16.0",
    "babel-jest": "^27.4.2",
    "jest": "^30.2.0",
    "jsdoc": "^4.0.5",
    "jsdom": "^20.0.0"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": ".coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 80,
        "branches": 80,
        "functions": 80,
        "lines": 80
      }
    },
    "coverageReporters": [
      "json",
      "text",
      "lcov"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  }
}